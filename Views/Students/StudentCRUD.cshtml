@{
    var students = ViewData["Students"] as List<CrudMVC8.Models.Student>;

    // Check if students is not null and contains any items
    if (students != null && students.Any())
    {
        <h3>All Students</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in students)
                {
                    <tr>
                        <td>@student.Name</td>
                        <td>@student.Email</td>
                        <td>
                            <a href="@Url.Action("Edit", new { id = student.Id })" class="btn btn-warning">Edit</a>
                            <a href="@Url.Action("Details", new { id = student.Id })" class="btn btn-info">Details</a>
                            <a href="@Url.Action("Delete", new { id = student.Id })" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No students found.</p>
    }
}
