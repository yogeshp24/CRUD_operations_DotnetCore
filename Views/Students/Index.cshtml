@model List<CrudMVC8.Models.Student>

@{
    ViewData["Title"] = "All Students";
}

<h2>Student List</h2>
<a href="@Url.Action("Create")" class="btn btn-primary">Create New Student</a>


<table class="table table-striped">
    <thead>
        
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Age</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
       
        @foreach (var student in Model)
        {
            <tr>
                
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>@student.Age</td>
                <td>
                    <a href="@Url.Action("Edit", "Students", new { id = student.Id })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("Details", "Students", new { id = student.Id })" class="btn btn-info btn-sm">Details</a>
                    <a href="@Url.Action("Delete", "Students", new { id = student.Id })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
